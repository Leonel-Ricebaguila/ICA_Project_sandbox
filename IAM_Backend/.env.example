# SERVER
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=changeme_replace_with_random_32b
JWT_EXP_SECONDS=3600

# DB (SQLite default)
DATABASE_URL=sqlite:///./iam.db

# SIGNING KEY (Use secure ed25519 private key in prod)
ED25519_SECRET_HEX=  # leave empty -> autogenerated on first run and saved to file

# QR / Security
QR_TTL_SECONDS=60
QR_BYTES=24

# TOTP
TOTP_ISSUER=UPY-IAM

ALLOWED_IP_RANGES=127.0.0.1/32,192.168.1.0/24

# CORS (separados por coma). Usa * para permitir todo (solo desarrollo)
CORS_ORIGINS=*

# Límite de oyentes SSE simultáneos
MAX_SSE_LISTENERS=100

# Optional: camera sources (Name|URL, comma-separated)
# Examples:
#   CAM_URLS="Cam 1|/camera_sim/1,Cam 2|/camera_sim/2"
#   CAM_URLS="Lobby|http://192.168.1.10:8080/video,Patio|http://192.168.1.11/stream.mjpg"
#   CAM_URLS="Garage|rtsp://user:pass@192.168.1.12:554/stream1"
CAM_URLS=Cam 1|/camera_sim/1,Cam 2|/camera_sim/2,Cam 3|/camera_sim/3,Cam 4|/camera_sim/4
